<div class="flex flex-col h-screen bg-gray-100">
    <div class="flex">
        <aside class="w-64 bg-white shadow-md h-full">
            {{> aside }}
        </aside>
        <main class="flex-1 overflow-y-auto p-6 bg-gray-100 h-full">
            <div class="container mx-auto p-6">
                <div class="text-center mb-10">
                    <h1 class="text-4xl font-bold text-indigo-600">
                        Product Details
                    </h1>
                    <p class="text-gray-500 mt-2">
                        Explore detailed information about your selected product
                    </p>
                </div>
                <div
                    class="bg-white shadow-lg rounded-lg p-8 flex flex-wrap items-start gap-6 hover:shadow-2xl transition-shadow border border-gray-100">
                    <div class="flex-shrink-0 w-full md:w-1/3">
                        <img src="{{product.images}}" alt="{{product.title}}"
                            class="w-full h-auto object-cover rounded-lg shadow-md transform hover:scale-105 transition-transform" />
                    </div>
                    <div class="flex-1">
                        <h2 class="text-2xl font-bold text-gray-800">
                            {{product.title}}
                        </h2>
                        <p class="text-gray-500 text-sm mt-2">
                            Category:
                            <span class="font-medium text-indigo-500">
                                {{product.category}}
                            </span>
                        </p>
                        <p class="text-gray-700 mt-4 text-base leading-relaxed">
                            {{product.description}}
                        </p>
                        <div class="mt-6">
                            <p class="text-xl font-bold text-gray-900">
                                Price:
                                <span class="text-red-500">{{product.price}}</span> VND
                            </p>
                            <p class="text-sm text-gray-500 mt-2">
                                Stock Quantity:
                                <span class="font-medium">{{product.stock_quantity}}</span>
                            </p>
                        </div>
                    </div>
                    <div class="w-full mt-4 text-sm text-gray-500">
                        <p>
                            Product ID:
                            <span class="font-medium text-gray-700">{{product._id}}</span>
                        </p>
                    </div>
                    <!-- Nút mở modal chỉnh sửa thông tin -->
                    <div class="w-full mt-6 text-center">
                        <button id="openModalBtn"
                            class="px-6 py-3 bg-indigo-600 text-white font-semibold rounded-lg shadow hover:bg-indigo-700 transition">
                            Update Product
                        </button>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <div>
        {{> footer }}
    </div>

    <!-- Modal -->
    <div id="editModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
        <div class="bg-white w-11/12 md:w-2/3 lg:w-1/2 max-h-screen overflow-y-auto rounded-lg shadow-lg">
            <div class="flex justify-between items-center p-4 border-b bg-gray-100">
                <h3 class="text-xl font-semibold text-gray-800">Edit Product</h3>
                <button id="closeModalBtn" class="text-gray-500 hover:text-gray-700">
                    &#10005;
                </button>
            </div>
            <form action="/admin/products/edit/{{product._id}}" method="POST" class="p-6 space-y-4">
                <!-- Title -->
                <div class="flex items-center space-x-4">
                    <label class="w-1/4 text-gray-700 font-medium">Title</label>
                    <input type="text" name="title" value="{{product.title}}" required
                        class="flex-1 px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-300">
                </div>
                <!-- Category -->
                <div class="flex items-center space-x-4">
                    <label class="w-1/4 text-gray-700 font-medium">Category</label>
                    <input type="text" name="category" value="{{product.category}}" required
                        class="flex-1 px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-300">
                </div>
                <!-- Description -->
                <div class="flex items-start space-x-4">
                    <label class="w-1/4 text-gray-700 font-medium">Description</label>
                    <textarea name="description" rows="3" required
                        class="flex-1 px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-300">{{product.description}}</textarea>
                </div>
                <!-- Price -->
                <div class="flex items-center space-x-4">
                    <label class="w-1/4 text-gray-700 font-medium">Price (VND)</label>
                    <input type="number" name="price" value="{{product.price}}" required
                        class="flex-1 px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-300">
                </div>
                <!-- Stock Quantity -->
                <div class="flex items-center space-x-4">
                    <label class="w-1/4 text-gray-700 font-medium">Stock Quantity</label>
                    <input type="number" name="stock_quantity" value="{{product.stock_quantity}}" required
                        class="flex-1 px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-300">
                </div>
                <!-- Buttons -->
                <div class="flex justify-end space-x-4">
                    <button type="button" id="cancelBtn"
                        class="px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400 transition">
                        Cancel
                    </button>
                    <button type="submit"
                        class="px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- JavaScript để xử lý mở và đóng modal -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const openModalBtn = document.getElementById('openModalBtn');
            const closeModalBtn = document.getElementById('closeModalBtn');
            const cancelBtn = document.getElementById('cancelBtn');
            const editModal = document.getElementById('editModal');

            // Hàm mở modal
            openModalBtn.addEventListener('click', function () {
                editModal.classList.remove('hidden');
            });

            // Hàm đóng modal khi nhấn nút đóng hoặc hủy
            closeModalBtn.addEventListener('click', function () {
                editModal.classList.add('hidden');
            });

            cancelBtn.addEventListener('click', function () {
                editModal.classList.add('hidden');
            });

            // Đóng modal khi nhấn ngoài vùng modal
            window.addEventListener('click', function (e) {
                if (e.target === editModal) {
                    editModal.classList.add('hidden');
                }
            });
        });
    </script>
</div>