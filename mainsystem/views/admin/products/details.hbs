<div class="flex flex-col h-screen bg-gray-100">
    <div class="flex">
        <aside class="w-64 bg-white shadow-md h-full">
            {{> aside }}
        </aside>
        <main class="flex-1 overflow-y-auto px-6 py-4 bg-gray-50 h-full">
            <div class="container mx-auto px-4 py-2">
                <div class="text-center mb-6">
                    <div
                        class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 text-white rounded-xl shadow-md p-6">
                        <h1 class="text-4xl font-extrabold tracking-tight">
                            Product Details
                        </h1>
                        <p class="text-white mt-2 text-lg mb-0">
                            Explore detailed information about your selected product
                        </p>
                    </div>
                </div>
                <div
                    class="bg-white shadow-lg rounded-2xl p-8 flex flex-wrap items-start gap-8 transition-all border border-gray-200 hover:shadow-2xl">
                    <div class="flex-shrink-45 w-full md:w-1/3">
                        <img src="{{product.image}}" alt="{{product.title}}"
                            class="w-full h-auto object-cover rounded-lg shadow-md transform hover:scale-105 hover:rotate-1 transition-transform" />
                    </div>
                    <div class="flex-1 space-y-6">
                        <h2
                            class="text-3xl font-semibold text-gray-900 leading-tight flex justify-between items-center">
                            <span>{{product.title}}</span>
                            <span class="text-sm text-gray-500 flex items-center gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-500" fill="none"
                                    viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="M3 3h8v8H3V3zM3 13h8v8H3v-8zM13 3h8v8h-8V3zM13 13h8v8h-8v-8z" />
                                </svg>
                                <span class="text-gray-700">{{product.category}}</span>
                            </span>
                        </h2>
                        <div class="flex justify-between items-center gap-6 mt-3">
                            <div class="flex items-center gap-3 text-base font-semibold text-gray-800">
                                <i class="fas fa-dollar-sign text-yellow-500 text-3xl"></i>
                                <span class="font-semibold text-gray-700 text-lg">{{product.price}}</span>
                                <span class="text-gray-600 text-sm">USD</span>
                            </div>
                            <div class="flex items-center gap-3 text-base font-semibold text-gray-800">
                                <i class="fas fa-boxes text-blue-500 text-3xl"></i>
                                <span class="font-semibold text-gray-700 text-lg">{{product.stock_quantity}}</span>
                                <span class="text-gray-600 text-sm">in stock</span>
                            </div>
                        </div>
                        <p class="text-gray-700 leading-relaxed text-justify text-base space-y-2 mt-3">
                            <span class="font-medium text-gray-800">Description:</span>
                            <span>{{product.description}}</span>
                        </p>
                        <div class="flex justify-end w-full mt-3">
                            <button id="openModalBtn"
                                class="px-6 py-2 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-full shadow-lg hover:shadow-xl transform hover:scale-105 transition-transform duration-200">
                                Update Product
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <div>
        {{> footer }}
    </div>

    <!-- Modal -->
    <div id="editModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
        <div class="bg-white w-11/12 md:w-2/3 lg:w-1/2 max-h-screen overflow-y-auto rounded-lg shadow-lg">
            <div class="flex justify-between items-center p-4 border-b bg-gray-100">
                <h3 class="text-xl font-semibold text-gray-800">Edit Product</h3>
                <button id="closeModalBtn" class="text-gray-500 hover:text-gray-700">
                    &#10005;
                </button>
            </div>
            <form action="/admin/products/edit/{{product._id}}" method="POST" class="p-6 space-y-4">
                <!-- Override method -->
                <input type="hidden" name="_method" value="PUT">

                <!-- Title -->
                <div class="flex items-center space-x-4">
                    <label class="w-1/4 text-gray-700 font-medium">Title</label>
                    <input type="text" name="title" placeholder="Enter product title" value="{{product.title}}" required
                        class="flex-1 px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-300">
                </div>

                <!-- Category -->
                <div class="flex items-center space-x-4">
                    <label class="w-1/4 text-gray-700 font-medium">Category</label>
                    <input type="text" name="category" placeholder="Enter product category" value="{{product.category}}"
                        required
                        class="flex-1 px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-300">
                </div>

                <!-- Description -->
                <div class="flex items-start space-x-4">
                    <label class="w-1/4 text-gray-700 font-medium">Description</label>
                    <textarea name="description" rows="3" placeholder="Enter product description" required
                        class="flex-1 px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-300">{{product.description}}</textarea>
                </div>

                <!-- Price -->
                <div class="flex items-center space-x-4">
                    <label class="w-1/4 text-gray-700 font-medium">Price ($)</label>
                    <input type="number" name="price" value="{{product.price}}" step="0.01" min="0" required
                        class="flex-1 px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-300">
                </div>

                <!-- Stock Quantity -->
                <div class="flex items-center space-x-4">
                    <label class="w-1/4 text-gray-700 font-medium">Stock Quantity</label>
                    <input type="number" name="stock_quantity" value="{{product.stock_quantity}}" step="1" min="0"
                        required
                        class="flex-1 px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-300">
                </div>

                <!-- Buttons -->
                <div class="flex justify-end space-x-4">
                    <button type="button" id="cancelBtn" onclick="window.history.back();"
                        class="px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400 transition">
                        Cancel
                    </button>
                    <button type="submit"
                        class="px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const openModalBtn = document.getElementById('openModalBtn');
            const closeModalBtn = document.getElementById('closeModalBtn');
            const cancelBtn = document.getElementById('cancelBtn');
            const editModal = document.getElementById('editModal');

            openModalBtn.addEventListener('click', function () {
                editModal.classList.remove('hidden');
            });

            closeModalBtn.addEventListener('click', function () {
                editModal.classList.add('hidden');
            });

            cancelBtn.addEventListener('click', function () {
                editModal.classList.add('hidden');
            });
        });
    </script>
</div>