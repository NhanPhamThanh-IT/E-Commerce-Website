<div class="flex flex-col h-screen bg-gray-100">
    <div class="flex">
        {{> aside }}

        <main class="flex-1 overflow-y-auto bg-gray-100 relative h-full">
            {{!-- Search Bar --}}
            {{> admin/navbar action="/admin/users/search" title="Users List" content="Explore our curated list of users tailored just for you" 
            options='<select name="field"
                class="pl-3 pr-2 py-2 border border-gray-300 rounded-full bg-white text-gray-700 focus:outline-none hover:border-blue-400 transition">
                <option value="username">User Name</option>
                <option value="email">Email</option>
            </select>
            '}}

            <div class="px-4">
                
                <div id="loading"
                    class="absolute inset-0 flex flex-col items-center justify-center bg-gray-100 bg-opacity-75 z-50 hidden">
                    <div class="animate-spin rounded-full h-16 w-16 border-t-4 border-blue-500"></div>
                    <div class="mt-4 text-center text-gray-700 font-semibold">Loading...</div>
                </div>

                {{!-- Users Table --}}
                <div class="px-4">
                <div class="bg-black rounded-xl shadow-md p-6">
                    <table class="table-auto bg-white w-full text-left rounded-xl">
                        <thead class="bg-black text-white rounded-t-xl">
                            <tr class="bg-[#f3d2c3] text-gray-900">
                                <th class="px-6 py-4 font-bold text-lg text-center w-48 rounded-tl-xl">
                                    Avatar
                                </th>
                                <th class="px-6 py-4 font-bold text-lg text-center">Name
                                </th>
                                <th class="px-6 py-4 font-bold text-lg text-center">Email
                                </th>
                                <th class="px-6 py-4 font-bold text-lg text-center w-48 rounded-tr-xl">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tr>
                        <td colspan="4" class="border-t border-black"></td>
                        </tr>
                        <tbody id="users-container" class="divide-y divide-black rounded-b-xl">
                            {{!-- Orders will be rendered at here --}}
                        </tbody>
                    </table>
                </div>
                <div id="pagination-container"></div>
            </div>

        </main>
   </div>
    <div>
        {{> footer }}
    </div>
</div>


<div id="deleteModal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50">
    <div class="bg-white rounded-lg shadow-lg w-96 p-6">
        <h2 class="text-lg font-bold mb-4">Confirm Deletion</h2>
        <p class="text-sm text-gray-600 mb-6">Are you sure you want to delete this user? This action cannot be undone.
        </p>
        <div class="flex justify-end space-x-4">
            <button onclick="closeDeleteModal()"
                class="px-4 py-2 text-gray-700 bg-gray-300 rounded-lg hover:bg-gray-400 transition">
                Cancel
            </button>
            <button id="confirmDeleteButton"
                class="px-4 py-2 text-white bg-red-500 rounded-lg hover:bg-red-600 transition">
                Confirm
            </button>
        </div>
    </div>
</div>

<script src="/js/admin/user.js"></script>