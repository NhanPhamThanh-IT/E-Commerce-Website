<div class="container mx-auto my-8 px-4">
    <!-- Page Title -->
    <h1 class="text-4xl font-semibold text-center text-gray-800 mb-8">Account Profile</h1>

    <!-- Total Balance Card -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8 max-w-5xl mx-auto border border-gray-200">
        <div class="flex justify-between items-center">
            <h2 class="text-2xl font-semibold text-left text-gray-600">Total Balance</h2>
        </div>
        <div class="flex justify-between items-center mt-4">
            <p class="text-3xl font-bold text-gray-800">${{balance}}</p>
            <button
                onclick="toggleAddFundsModal()"
                class="bg-blue-500 text-white py-2 px-6 rounded-lg hover:bg-blue-600 shadow focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-50 flex items-center">
                <i class="fa-solid fa-circle-dollar-to-slot mr-3"></i>
                Add Funds
            </button>
        </div>
    </div>

    <!-- User Info Card with Payment History -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-8 max-w-5xl mx-auto border border-gray-200">
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-2xl font-semibold text-left text-gray-800">Account Information</h2>
        </div>
        <div class="space-y-3 mb-6">
            <p class="text-gray-600 text-lg">Name: <span class="font-semibold text-gray-900">{{user.firstName}} {{user.lastName}}</span></p>
            <p class="text-gray-600 text-lg">Email: <span class="font-semibold text-gray-900">{{user.email}}</span></p>
        </div>
        <h2 class="text-xl font-semibold text-left text-gray-800 mb-4">Payment History</h2>
        <div class="overflow-x-auto">
            {{#if paymentHistory.length}}
            <table class="min-w-full bg-white border border-gray-300 rounded-lg">
                <thead class="bg-gray-100 border-b">
                    <tr>
                        <th class="px-6 py-3 text-left text-sm font-medium text-gray-600 text-center">Order ID</th>
                        <th class="px-6 py-3 text-left text-sm font-medium text-gray-600 text-center">User ID</th>
                        <th class="px-6 py-3 text-left text-sm font-medium text-gray-600 text-center">Date</th>
                        <th class="px-6 py-3 text-left text-sm font-medium text-gray-600 text-center">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each paymentHistory}}
                    <tr class="border-b hover:bg-gray-50">
                        <td class="px-6 py-4 text-sm text-gray-800 text-center">{{this.order_id}}</td>
                        <td class="px-6 py-4 text-sm text-gray-800 text-center">{{this.user_id}}</td>
                        <td class="px-6 py-4 text-sm text-gray-800 text-center">{{formatDate this.date}}</td>
                        <td class="px-6 py-4 text-sm text-gray-800 text-center font-semibold">${{this.total_payment}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{else}}
            <p class="text-gray-600 text-center mt-4">No payment history available.</p>
            {{/if}}
        </div>
    </div>

    <!-- Add Money Modal -->
    <div id="add-funds-modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
        <div class="bg-white rounded-lg shadow-lg px-6 py-3 w-full max-w-lg border border-gray-200">
            <h2 class="text-2xl font-semibold text-center text-gray-800 mb-6">Add Funds</h2>
            <form id="add-money-form" class="space-y-6">
                <div class="flex flex-col">
                    <label for="amount" class="text-lg font-medium text-gray-700 mb-2">Enter Amount</label>
                    <input type="number" id="amount" name="amount"
                        class="border border-gray-300 rounded-lg px-4 py-3 text-gray-800 focus:ring-2 focus:ring-blue-500 focus:outline-none transition-all duration-200 hover:shadow-md"
                        placeholder="Enter amount to add" required />
                </div>
                <div class="flex justify-end space-x-4">
                    <button type="button"
                        class="bg-red-500 text-white py-2 px-6 rounded-lg hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-400 transition-all duration-200 flex items-center space-x-2"
                        onclick="toggleAddFundsModal()">
                        <i class="fa-solid fa-times font-semibold"></i>
                        <span class="font-semibold">Cancel</span>
                    </button>
                    <button type="submit"
                        class="bg-blue-500 text-white py-2 px-6 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-200 flex items-center space-x-2">
                        <i class="fa-solid fa-circle-dollar-to-slot text-white font-semibold"></i>
                        <span class="font-semibold">Accept</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function toggleAddFundsModal() {
        const modal = document.getElementById('add-funds-modal');
        modal.classList.toggle('hidden');
    }

    document.getElementById('add-money-form').addEventListener('submit', async function (event) {
        event.preventDefault();
        const amount = parseFloat(document.getElementById('amount').value);

        if (isNaN(amount) || amount <= 0) {
            alert('Please enter a valid amount.');
            return;
        }

        try {
            const response = await fetch('/add-money', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ amount })
            });

            const result = await response.json();

            if (response.ok) {
                alert(`Successfully added $${amount} to your balance!`);
                window.location.reload();
            } else {
                alert(result.message || 'Failed to add money.');
            }
        } catch (error) {
            alert('An error occurred while adding money.');
            console.error(error);
        }
    });
</script>