<div class="container mx-auto my-8 px-4">
    <!-- Page Title -->
    <h1 class="text-4xl font-bold text-center text-gray-800 mb-10">Account Profile</h1>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Account Overview Card -->
        <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
            <div class="flex flex-col space-y-4">
                <h2 class="text-xl font-bold text-gray-800">Account Information</h2>
                <div class="flex flex-col space-y-4">
                    <div class="grid lg:grid-cols-2 md:grid-cols-1 gap-6">
                        <div class="flex flex-col">
                            <p class="text-gray-500 text-lg font-medium">Full Name</p>
                            <p
                                class="font-semibold text-gray-900 rounded-lg border-2 border-gray-300 bg-gray-100 px-4 py-2 shadow-sm transition-colors hover:bg-gray-200">
                                {{user.firstName}} {{user.lastName}}
                            </p>
                        </div>
                        <div class="flex flex-col">
                            <p class="text-gray-500 text-lg font-medium">Email Address</p>
                            <p
                                class="font-semibold text-gray-900 rounded-lg border-2 border-gray-300 bg-gray-100 px-4 py-2 shadow-sm transition-colors hover:bg-gray-200">
                                {{user.email}}
                            </p>
                        </div>
                    </div>
                    <div class="flex flex-col">
                        <p class="text-gray-500 text-lg font-medium">Total Balance</p>
                        <p
                            class="font-semibold text-gray-900 rounded-lg border-2 border-gray-300 bg-gray-100 px-4 py-2 shadow-sm transition-colors hover:bg-gray-200">
                            ${{balance}}
                        </p>
                    </div>
                </div>
            </div>
            <div class="flex flex-col sm:flex-row justify-between items-center mt-6 gap-4">
                <a href="/user"
                    class="inline-flex items-center bg-red-500 text-white font-bold py-2 px-6 rounded-lg hover:bg-red-600 transition">
                    <i class="fa-solid fa-house mr-2"></i> Return
                </a>
                <button onclick="toggleAddFundsModal()"
                    class="inline-flex items-center bg-blue-500 text-white font-bold py-2 px-6 rounded-lg hover:bg-blue-600 transition">
                    <i class="fa-solid fa-circle-dollar-to-slot mr-2"></i> Deposit
                </button>
            </div>
        </div>

        <!-- Payment History -->
        <div class="bg-white rounded-lg shadow-md p-6 border border-gray-200">
            <h2 class="text-xl font-bold text-gray-800 mb-4">Payment History</h2>
            <div class="overflow-x-auto">
                {{#if paymentHistory.length}}
                <table class="w-full bg-white border border-gray-300 rounded-lg">
                    <thead class="bg-gray-100">
                        <tr>
                            <th class="px-6 py-3 text-sm font-medium text-gray-600 text-center">Order ID</th>
                            <th class="px-6 py-3 text-sm font-medium text-gray-600 text-center">Date</th>
                            <th class="px-6 py-3 text-sm font-medium text-gray-600 text-center">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each paymentHistory}}
                        <tr class="border-b hover:bg-gray-50">
                            <td class="px-6 py-4 text-sm text-gray-800 text-center">{{this.order_id}}</td>
                            <td class="px-6 py-4 text-sm text-gray-800 text-center">{{formatDate this.date}}</td>
                            <td class="px-6 py-4 text-sm font-semibold text-gray-800 text-center">
                                ${{this.total_payment}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{else}}
                <p class="text-gray-600 text-center mt-4">No payment history available.</p>
                {{/if}}
            </div>
        </div>
    </div>

    <!-- Add Funds Modal -->
    <div id="add-funds-modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
        <div class="bg-white rounded-lg shadow-lg p-8 w-full max-w-md border border-gray-200">
            <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Add Funds</h2>
            <form id="add-money-form" class="space-y-4">
                <div>
                    <label for="amount" class="block text-lg font-medium text-gray-700">Enter Amount</label>
                    <input type="number" id="amount" name="amount"
                        class="w-full border border-gray-300 rounded-lg px-4 py-3 mt-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                        placeholder="Enter amount to add" required />
                </div>
                <div class="flex justify-between">
                    <button type="button" onclick="toggleAddFundsModal()"
                        class="bg-red-500 text-white font-bold py-2 px-6 rounded-lg hover:bg-red-600 transition">
                        Cancel
                    </button>
                    <button type="submit"
                        class="bg-blue-500 text-white font-bold py-2 px-6 rounded-lg hover:bg-blue-600 transition">
                        Accept
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function toggleAddFundsModal() {
        const modal = document.getElementById('add-funds-modal');
        modal.classList.toggle('hidden');
    }

    document.getElementById('add-money-form').addEventListener('submit', async function (event) {
        event.preventDefault();
        const amount = parseFloat(document.getElementById('amount').value);

        if (isNaN(amount) || amount <= 0) {
            alert('Please enter a valid amount.');
            return;
        }

        try {
            const response = await fetch('/add-money', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ amount })
            });

            const result = await response.json();

            if (response.ok) {
                alert(`Successfully added $${amount} to your balance!`);
                window.location.reload();
            } else {
                alert(result.message || 'Failed to add money.');
            }
        } catch (error) {
            alert('An error occurred while adding money.');
            console.error(error);
        }
    });
</script>