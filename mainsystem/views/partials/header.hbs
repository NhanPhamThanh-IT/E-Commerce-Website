<header
    class="bg-white border-b shadow flex justify-between items-center px-3 py-3 fixed top-0 w-full z-10 border-b-2 border-gray-600">
    <a class="navbar-brand">
        <img src="/system_images/Logo.png" width="100" height="50" alt="Logo">
    </a>

    <div class="flex justify-between items-center w-full">
        <div class="flex items-center justify-start space-x-8 ml-10 py-4">
            <a href="/"
                class="hover:scale-125 no-underline hover:no-underline text-lg font-semibold text-gray-600 hover:text-gray-800 transition duration-200">Home</a>
            <div class="relative flex items-center">
                <i class="fa fa-search absolute left-3 top-2.5 text-gray-400"></i>
                <input id="search-input" type="text" placeholder="Search here"
                    class="block w-80 pl-10 pr-4 py-2 text-sm border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
            </div>
        </div>

        <div class="relative group mx-2">
            <p id="category-trigger"
                class="hover:scale-125 text-lg font-semibold text-gray-600 hover:text-gray-800 transition duration-200 cursor-pointer">
                Category
            </p>
            <div id="category-dropdown"
                class="absolute hidden group-hover:block bg-white rounded-md shadow-lg mt-2 w-40 z-10">
                <ul class="text-gray-600">
                    {{#each categories}}
                    <li data-value="{{this}}" class="hover:bg-gray-100 px-4 py-2 cursor-pointer">
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>

        <div class="flex items-center space-x-10 mr-3">
            <a href="/profile"
                class="hover:scale-125 no-underline hover:no-underline text-lg font-semibold text-gray-600 hover:text-gray-800 transition duration-200">Profile</a>
            <a href="https://localhost:3113/account"
                class="hover:scale-125 no-underline hover:no-underline text-lg font-semibold text-gray-600 hover:text-gray-800 transition duration-200">Account</a>
            <form action="/logout" method="post" class="mb-0">
                <button class="text-lg bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 rounded-full text-white px-6 py-2 font-semibold shadow-md hover:shadow-lg transition-all duration-200 ease-in-out">
                    Logout
                </button>
            </form>
        </div>
    </div>
</header>