<div class="bg-white w-screen h-screen flex overflow-hidden">
    <div id="loginSection"
        class="auth-container w-1/3 max-w-sm mx-auto p-8 rounded-[30px] shadow-2xl bg-slate-950 my-4 border-2 border-[#6b61ff] bg-opacity-80">
        <h2 class="text-2xl font-semibold text-center text-[#6b61ff] mb-6 truncate">Log in to your account</h2>
        <form id="loginForm" class="space-y-3 mb-4">
            <div class="form-group">
                <label for="email" class="block text-lg font-bold text-gray-300">Email</label>
                <input type="email"
                    class="form-input w-full p-3 border-2 border-[#6b61ff] rounded-md focus:outline-none" id="email"
                    name="email" placeholder="Enter your email" required>
            </div>
            <div class="form-group">
                <label for="password" class="block text-lg font-bold text-gray-300">Password</label>
                <div class="relative">
                    <input type="password"
                        class="form-input w-full p-3 border-2 border-[#6b61ff] rounded-md focus:outline-none"
                        id="password" name="password" placeholder="Enter your password" required>
                    <button type="button" id="togglePassword"
                        class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-600">
                        <i id="eyeIcon" class="fas fa-eye"></i>
                    </button>
                </div>
            </div>
            <div class="font-bold bg-green-500 text-white rounded-md hover:bg-green-700 transition duration-200 mt-8">
                <button type="submit" class="btn w-full py-3 text-white">Log in</button>
            </div>
            <div class="divider mt-4 mb-0 text-center text-[#6b61ff] truncate">Or Continue With</div>
            <div class="flex justify-center gap-x-4">
                <div
                    class="truncate text-white font-bold bg-blue-600 w-[130px] py-1 rounded-md hover:bg-blue-700 transition duration-200 text-center flex items-center justify-center border-2 border-blue-600 hover:border-blue-700">
                    <a href="/facebook" class="btn text-white">
                        <i class="fab fa-facebook"></i> Facebook
                    </a>
                </div>
                <div
                    class="truncate text-white font-bold bg-red-600 w-[130px] py-1 rounded-md hover:bg-red-700 transition duration-200 text-center flex items-center justify-center border-2 border-red-600">
                    <a href="/google" class="btn text-white">
                        <i class="fab fa-google"></i> Google
                    </a>
                </div>
            </div>
        </form>
        <div class="toggle-link text-center mt-6">
            <p class="text-sm text-gray-300 mb-0 truncate">Don't have an account? <span onclick="changeToSignUp()"
                    class="text-[#6b61ff] no-underline hover:no-underline">Sign up</span></p>
        </div>
    </div>
    <div id="imageSection" class="w-2/3 md:block">
        <div class="flex items-center justify-center h-screen">
            <img src="/system_images/login_2.gif" alt="logo" class="h-2/3 w-2/3 object-cover">
        </div>
    </div>
    <div id="registerSection" class="auth-container w-1/3 max-w-sm mx-auto p-8 rounded-[30px] shadow-2xl bg-slate-950 my-4 border-2
    border-[#6b61ff] bg-opacity-80 hidden">
        <h2 class="text-2xl font-semibold text-center text-[#6b61ff] mb-6">Create a new account</h2>
        <form id="signupForm" class="space-y-6 mb-4">
            <div class="form-group">
                <label for="signUpEmail" class="block text-lg font-bold text-gray-300">Email</label>
                <input type="email"
                    class="form-input w-full p-3 border-2 border-[#6b61ff] rounded-md focus:outline-none"
                    id="signUpEmail" name="email" placeholder="Enter your email" required>
            </div>
            <div class="form-group">
                <label for="signUpPassword" class="block text-lg font-bold text-gray-300">Password</label>
                <input type="password"
                    class="form-input w-full p-3 border-2 border-[#6b61ff] rounded-md focus:outline-none"
                    id="signUpPassword" name="password" placeholder="Create a password" required>
            </div>
            <div class="form-group">
                <label for="signUpConfirmedPassword" class="block text-lg font-bold text-gray-300">Confirmed
                    Password</label>
                <input type="password"
                    class="form-input w-full p-3 border-2 border-[#6b61ff] rounded-md focus:outline-none"
                    id="signUpConfirmedPassword" name="password" placeholder="Type password again" required>
            </div>
            <div class="font-bold bg-green-500 text-white rounded-md hover:bg-green-700 transition duration-200 mt-8">
                <button type="submit" class="btn w-full py-3 text-white">Sign Up</button>
            </div>
        </form>
        <div class="toggle-link text-center mt-6">
            <p class="text-sm text-gray-300 mb-0">Already have an account? <span onclick="changeToLogin()"
                    class="text-[#6b61ff] no-underline hover:no-underline">Log in</span></p>
        </div>
    </div>
</div>

<div id="alertBox"
    class="overflow-hidden w-screen h-screen hidden fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50">
    <div class="p-6 rounded-lg shadow-2xl w-96 text-center transform transition-all duration-300 scale-90">
        <h2 id="alertMessage" class="text-white text-2xl font-semibold mb-4"></h2>
        <button id="alertCloseBtn"
            class="bg-yellow-500 text-white px-6 py-3 rounded-lg hover:bg-yellow-400 transition-colors transform hover:scale-105">
            OK
        </button>
    </div>
</div>

<script src="/js/login.js"></script>