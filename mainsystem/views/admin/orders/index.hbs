<div class="flex flex-col h-screen bg-gray-100">

    <div class="flex">
        {{> aside }}
        <main class="flex-1 overflow-y-auto bg-gray-100">
            {{> admin/navbar action="/admin/orders/search" title="Order List" content="View and manage your recent
            orders effortlessly"
            options='<select name="field"
                class="pl-3 pr-2 py-2 border border-gray-300 rounded-lg bg-white text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-400 hover:border-blue-400 transition">
                <option value="user_id">User ID</option>
                <option value="date">Date</option>
            </select>
            '}}

            <div class="px-4">
                <div class="bg-black rounded-xl shadow-md p-6">
                    <table class="table-auto bg-white w-full text-left rounded-xl">
                        <thead class="bg-black text-white">
                            <tr class="bg-[#f5f5f4] text-gray-600" class="rounded-t-xl">
                                <th class="px-6 py-4 font-bold text-lg text-center w-32 rounded-t-xl">
                                    User ID
                                </th>
                                <th class="px-6 py-4 font-bold text-lg text-center rounded-t-xl">Date
                                </th>
                                <th class="px-6 py-4 font-bold text-lg text-center rounded-t-xl">Total Amount
                                </th>
                                <th class="px-6 py-4 font-bold text-lg text-center w-48 rounded-t-xl">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody id="orders-container" class="divide-y divide-gray-200 rounded-b-xl">
                            {{#each orders}}
                            <tr>
                                <td class="px-4 py-3 text-center">{{this.user_id}}</td>
                                <td class="px-4 py-3 text-center">{{this.date}}</td>
                                <td class="px-4 py-3 text-center">${{this.total_amount}}</td>
                                <td class="px-4 py-3">
                                    <div class="flex justify-center items-center space-x-2">
                                        <form class="my-0 mb-0">
                                            <input type="hidden" name="_id" value="{{this._id}}" class="mx-auto" />
                                            <button type="button" onclick="openViewModal('{{this._id}}')"
                                                class="view-button bg-blue-500 text-white px-3 py-2 rounded-lg hover:bg-blue-600 transition duration-800 font-bold mx-auto">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </form>
                                        <form class="my-0 mb-0">
                                            <input type="hidden" name="_id" value="{{this._id}}" class="mx-auto" />
                                            <button type="button" onclick="openDeleteModal('{{this._id}}')"
                                                class="delete-button bg-red-500 text-white px-3 py-2 rounded-lg hover:bg-red-600 transition duration-800 font-bold mx-auto">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <div id="pagination-container" class="flex justify-center my-4"></div>
            </div>
        </main>
    </div>
    <div>
        {{> footer }}
    </div>
</div>

<div id="deleteModal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50">
    <div class="bg-white rounded-lg shadow-lg w-96 p-6">
        <h2 class="text-lg font-bold mb-4">Confirm Deletion</h2>
        <p class="text-sm text-gray-600 mb-6">Are you sure you want to delete this order? This action cannot be undone.
        </p>
        <div class="flex justify-end space-x-4">
            <button onclick="closeDeleteModal()"
                class="px-4 py-2 text-gray-700 bg-gray-300 rounded-lg hover:bg-gray-400 transition">
                Cancel
            </button>
            <button id="confirmDeleteButton"
                class="px-4 py-2 text-white bg-red-500 rounded-lg hover:bg-red-600 transition">
                Confirm
            </button>
        </div>
    </div>
</div>

<div id="viewModal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50">
    <div class="bg-white rounded-lg shadow-lg w-96 p-6">
        <h2 class="text-lg font-bold mb-4">Order Details</h2>
        <div class="flex justify-between mb-4">
            <p class="text-sm text-gray-600">User ID:</p>
            <p id="view-user-id" class="text-sm text-gray-800"></p>
        </div>
        <div class="flex justify-between mb-4">
            <p class="text-sm text-gray-600">Date:</p>
            <p id="view-date" class="text-sm text-gray-800"></p>
        </div>
        <div class="flex justify-between mb-4">
            <p class="text-sm text-gray-600">Total Amount:</p>
            <p id="view-total-amount" class="text-sm text-gray-800"></p>
        </div>
        <div class="flex justify-between mb-4">
            <p class="text-sm text-gray-600">Items:</p>
            <ul id="view-items" class="text-sm text-gray-800 list-disc ml-4"></ul>
        </div>
        <div class="flex justify-end">
            <button onclick="closeViewModal()"
                class="px-4 py-2 text-gray-700 bg-gray-300 rounded-lg hover:bg-gray-400 transition">
                Close
            </button>
        </div>
    </div>
</div>

<script src="/js/admin/order.js"></script>