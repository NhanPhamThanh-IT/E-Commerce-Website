<div class="flex flex-col h-screen bg-gray-100">
    <div class="flex">
        {{> aside }}
        <main class="flex-1 overflow-y-auto bg-gray-100">
            {{> admin/navbar title="Product List" content="Browse through our curated list of products available for
            you"}}
            <div class="px-4">
                <div class="bg-white border-slate-500 border-2 rounded-xl shadow-md p-6">
                    <div id="products-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <!-- Products will be dynamically rendered here -->
                    </div>
                </div>
                <div id="pagination-container" class="flex justify-between mt-8 space-x-4">
                    <!-- Pagination buttons will be dynamically rendered here -->
                </div>
            </div>
        </main>
    </div>
    <div>
        {{> footer }}
    </div>
</div>

<!-- Delete Modal -->
<div id="deleteModal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50">
    <div class="bg-white rounded-lg shadow-lg w-96 p-6">
        <h2 class="text-lg font-bold mb-4">Confirm Deletion</h2>
        <p class="text-sm text-gray-600 mb-6">Are you sure you want to delete this product? This action cannot be
            undone.</p>
        <div class="flex justify-end space-x-4">
            <button onclick="closeDeleteModal()"
                class="px-4 py-2 text-gray-700 bg-gray-300 rounded-lg hover:bg-gray-400 transition">
                Cancel
            </button>
            <button id="confirmDeleteButton"
                class="px-4 py-2 text-white bg-red-500 rounded-lg hover:bg-red-600 transition">
                Confirm
            </button>
        </div>
    </div>
</div>

<!-- View Modal -->
<div id="viewModal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50">
    <div class="bg-white rounded-lg shadow-lg w-96 p-6">
        <h2 class="text-lg font-bold mb-4">Product Details</h2>
        <div class="flex justify-between mb-4">
            <p class="text-sm text-gray-600">Product Title:</p>
            <p id="view-title" class="text-sm text-gray-800"></p>
        </div>
        <div class="flex justify-between mb-4">
            <p class="text-sm text-gray-600">Category:</p>
            <p id="view-category" class="text-sm text-gray-800"></p>
        </div>
        <div class="flex justify-between mb-4">
            <p class="text-sm text-gray-600">Price:</p>
            <p id="view-price" class="text-sm text-gray-800"></p>
        </div>
        <div class="flex justify-between mb-4">
            <p class="text-sm text-gray-600">Stock Quantity:</p>
            <p id="view-stock" class="text-sm text-gray-800"></p>
        </div>
        <div class="flex justify-end">
            <button onclick="closeViewModal()"
                class="px-4 py-2 text-gray-700 bg-gray-300 rounded-lg hover:bg-gray-400 transition">
                Close
            </button>
        </div>
    </div>
</div>

<script src="/js/admin/product.js"></script>