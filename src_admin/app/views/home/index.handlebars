<div class="flex-1 flex flex-col">
    <header class="h-16 bg-white shadow flex items-center justify-between px-6">
        <h1 class="text-lg font-semibold">Welcome, Admin!</h1>
        <div>
            <button class="py-2 px-4 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Logout</button>
        </div>
    </header>
    <main class="flex-1 p-6 overflow-y-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="bg-white shadow rounded-lg p-6">
                <h2 class="text-lg font-bold">Users</h2>
                <p class="text-gray-600">Total: {{users}}</p>
            </div>
            <div class="bg-white shadow rounded-lg p-6">
                <h2 class="text-lg font-bold">Products</h2>
                <p class="text-gray-600">Total: {{products}}</p>
            </div>
            <div class="bg-white shadow rounded-lg p-6">
                <h2 class="text-lg font-bold">Orders</h2>
                <p class="text-gray-600">Total: {{orders}}</p>
            </div>
        </div>
    </main>
</div>
